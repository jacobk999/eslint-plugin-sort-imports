{
	"compilerOptions": {
		"declaration": true,
		"esModuleInterop": true,
		"module": "NodeNext",
		"outDir": "dist",
		"rootDir": "src",
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"target": "ES2022"
	},
	"include": ["src"],
	"exclude": ["node_modules", "dist"]
}